        "# Program Hitung Rata-rata dan Cek Status Kelulusan\n",
        "\n",
        "# Input nilai dari 3 mata pelajaran\n",
        "nilai1 = float(input(\"Masukkan nilai mapel 1: \"))\n",
        "nilai2 = float(input(\"Masukkan nilai mapel 2: \"))\n",
        "nilai3 = float(input(\"Masukkan nilai mapel 3: \"))\n",
        "\n",
        "# Hitung rata-rata\n",
        "rata_rata = (nilai1 + nilai2 + nilai3) / 3\n",
        "\n",
        "# Cek kelulusan\n",
        "if rata_rata >= 75:\n",
        "    status = \"LULUS\"\n",
        "else:\n",
        "    status = \"TIDAK LULUS\"\n",
        "\n",
        "# Tampilkan hasil\n",
